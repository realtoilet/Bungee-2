<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom layer: Solid color with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Background color for the embossed effect -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Middle layer: Stroke for the embossed effect -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color of the embossed border -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Top layer: Stroke line -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
            android:color="@color/darkblue" /> <!-- Stroke color -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
